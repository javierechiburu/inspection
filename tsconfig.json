{
  "compilerOptions": {
    "target": "ES2016",
    "jsx": "react-jsx",
    "module": "CommonJS",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "*": ["./types/*"],
      "@/*": ["./src/*"]
    },
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
